# CCTV Dashboard Environment Configuration
# Copy this file to .env and adjust values for your environment

# Application Environment
# development or production
APP_ENV=development

# Database Configuration
# For Development (Laragon)
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=cctv

# For Production (uncomment and adjust)
# DB_HOST=10.100.11.220
# DB_USER=cctv_user
# DB_PASS=cctv_N1HO
# DB_NAME=cctv_db

# Error Logging
# Path to error log file
ERROR_LOG_PATH=/var/log/php_cctv_error.log

# Security Settings
# Enable/Disable features
ENABLE_DEBUG=true
ENABLE_LOGGING=true
